<%- include ("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Add a New Comment <%= campground.name %></h1>
    </div>

    <div class="col-10 col-md-7 col-lg-5">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <textarea name="comment[text]" class="form-control" cols="30" rows="5" placeholder="Type Your Comment Here"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back!</a>
    </div>
</div>

<%- include ("../partials/footer") %>