<%- include ("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= campground.name %></h1>
    </div>
    <div class="col-10 col-md-7 col-lg-5">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <textarea placeholder="Description" name="campground[description]" class="form-control" cols="30" rows="5"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground.id %>">Go Back!</a>
    </div>
</div>
<%- include ("../partials/footer") %>