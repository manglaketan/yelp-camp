<%- include ("../partials/header.ejs") %>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4"><span class="fas fa-campground"></span>Welcome To YelpCamp!</h1>
        <p class="lead">View our handpicked campgrounds from all over the world</p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add A New Campground</a>
      </div>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                  </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include ("../partials/footer.ejs") %>